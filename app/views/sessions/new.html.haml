.container
  %h2= t('.sign_in')

  %div.formbox
    .row
      .span6.offset3
        = form_for(:session, url: sessions_path) do |f|
          = f.label  t('.email')
          = f.text_field :email
          = f.label t('.password')
          = f.password_field :password
          = f.submit t('.sign_in'), class: "btnsub"
        %p.sign_up_link
          -#= t('.new_user?')
